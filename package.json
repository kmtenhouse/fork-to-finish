{
  "name": "fork-to-finish",
  "version": "1.0.0",
  "description": "API for raw product to production",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmtenhouse/fork-to-finish.git"
  },
  "author": "Katherine Tenhouse",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kmtenhouse/fork-to-finish/issues"
  },
  "homepage": "https://github.com/kmtenhouse/fork-to-finish#readme",
  "dependencies": {
    "bluebird": "^3.7.1",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.2",
    "helmet-csp": "^2.9.4",
    "hpp": "^0.2.2",
    "mongoose": "^5.7.12",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "raw-body": "^2.4.1",
    "toobusy-js": "^0.5.1",
    "x-xss-protection": "^1.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.1"
  }
}
